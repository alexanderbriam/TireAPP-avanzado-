                android:background="#feee00" />

            <Spinner
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/spinnerMarcaCamion"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:background="#feee00"
                android:entries="@array/spinnerMarcaCamion"/>

            <Spinner
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/spinnerModeloCamion"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="130dp"
                android:background="#feee00"
                android:entries="@array/spinnerModeloCamion"/>



            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText26"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="160dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText27"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="190dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText28"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="220dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText29"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="250dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText30"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="280dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText31"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="310dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText32"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="340dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText33"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="370dp"
                android:background="#feee00" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:id="@+id/editText2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="400dp"
                android:background="#feee00" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Footer"
        android:layout_below="@+id/scrollView">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:id="@+id/buttonAgregar"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#000000"
            android:textColor="#feee00"
            android:textStyle="bold"
            android:onClick="Agregar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/buttonCancelarCamion"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_alignTop="@+id/buttonAgregar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#000000"
            android:textColor="#feee00"
            android:textStyle="bold"
            android:onClick="Cancelar" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/Footer"
        android:background="@color/grey_200"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true">

        <TextView android:textSize="18.0sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/TextFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_footer"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
